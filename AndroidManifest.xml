<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.unmcampuslocatorapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <permission
        android:name="com.android.unmcampuslocatorapp.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.android.unmcampuslocatorapp.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.unmcampuslocatorapp.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/new_logo2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.android.unmcampuslocatorapp.SplashScreen"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.unmcampuslocatorapp.MenuMain"
            android:label="@string/menu_main"
            >
        </activity>
        
        <activity
            android:id="@+id/mapView"
            android:name="com.android.unmcampuslocatorapp.MapActivity"
            android:label="UNM Campus Map"
            android:parentActivityName="com.android.unmcampuslocatorapp.MenuMain" >
        </activity>
        
        <activity
            android:name="com.android.unmcampuslocatorapp.SubActivity"
            android:label="@string/sub_name"
            android:parentActivityName="com.android.unmcampuslocatorapp.MapActivity" >
        </activity> 
        <activity  
            android:name="com.android.unmcampuslocatorapp.HelpPage"       
            android:label="@string/action_help"
            android:parentActivityName="com.android.unmcampuslocatorapp.SubActivity" >
        </activity>
        <activity    
            android:name="com.android.unmcampuslocatorapp.ErrorLoadingScreen"
            android:label="@string/error_title" >
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBqBvDTdF2YmkkjfzZyWwiNwHKna1akAL0" />
        
        <meta-data android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />
        
        
    </application>

</manifest>
